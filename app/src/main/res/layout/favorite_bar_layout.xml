<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_card_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        tools:background=""
        android:paddingBottom="@dimen/default_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowLeftBack"
            android:layout_width="33dp"
            android:layout_height="19dp"
            android:layout_marginTop="24dp"
            android:rotation="180"
            android:scaleType="fitStart"
            android:src="@drawable/arrow_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/productCardCategoryTitle"
            android:layout_width="225dp"
            android:layout_height="24dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:minLines="1"
            android:textAppearance="@style/product_card_title_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/favorite_title" />

        <Spinner
            android:id="@+id/filterList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/productCardCategoryTitle"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_favorite_filter"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
